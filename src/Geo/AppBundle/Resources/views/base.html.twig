{% extends "GeoAppBundle::layout.html.twig" %}

{% block title %}
  Check your Joker tickets automaticaly
{% endblock %}

{% block wrapper %}

  <span class="logo">Refenes</span>

  <div class="user-panel">
    <img class="ui avatar image" src="http://www.gravatar.com/avatar/{{ app.user.username }}?d=retro&s=35">
    <div style="">{{ greeting }}<br><strong>{{ app.user.username|title }}</strong></div>
    <div class="ui icon floating top right pointing dropdown circular button">
      <i class="content icon"></i>
      <div class="menu">
        <div class="item"><a href="{{ path('changepass') }}" class='amodal'>Change Password</a></div>
        <div class="item"><a href="{{ path('logout') }}">Logout</a></div>
      </div>
    </div>
  </div>

  <div style="display: block;margin:10px;"></div>

  {% block content %}{% endblock %}
{% endblock %}
